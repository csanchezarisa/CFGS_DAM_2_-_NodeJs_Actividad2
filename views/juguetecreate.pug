extends layout.pug

block content
    div.container.m-5
        div.row
            div.offset-4.col-6
                h3.text-muted.mb-5 Datos del juguete
                form.form-horizontal(role="form", action="/juguetes", method="post")
                    div.form-group
                        input.form-control.input-lg.panel-primary#nombre(type="text", name="nombre", placeholder="Nombre")
                    div.form-group
                        input.form-control.input-lg.panel-primary#precio(type="number", name="precio", placeholder="Precio")
                    div.form-group
                        input.form-control.input-lg.panel-primary#peso(type="number", name="peso", placeholder="Peso")
                    div.form-group
                        input.form-control.input-lg.panel-primary#stock(type="number", name="stock", placeholder="Stock")
                    div.form-group.text-right.mt-5
                        button.btn.btn-primary(type="submit") Enviar
                if(errores)
                    for error in errores
                        div.alert.alert-danger #{error}